  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <link rel="stylesheet" href="styles2.css">
  <script>
function myFunction(){
    var email=$(".email").val();


    if(email.length==0){

      $(".email").css("border-color","red");
      $(".email").css("border-width","2px");
      $(".alertemailtext").text("Please enter your Email to continue");
      return false;
    }else if(!email.includes('@' && '.')){
      $(".email").css("border-color","red");
      $(".email").css("border-width","2px");
      $(".alertemailtext").text("type correct email address");
      return false;
    }else{
      $(".email").css("border-color","#ccc");
      $(".email").css("border-width","1px");
      $(".alertemailtext").text("");
    }



return true;

}
    </script>
</head>

<body>
<div class="container mt-5">


  <div class="row centered">
    <div class="col-sm-10">
      <div class="card ">
        <div class="card-body ">

          <!-- Makes POST request to /register route -->
          <form action="/forgot" method="POST"  onsubmit="return myFunction()">
  <h1>Reset Password</h1>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control email" name="username">
            </div>

            <button type="submit" onclick="myFunction()" class="btn btn-danger">Reset Password</button>

          </form>
          <div class="alertemailtext rdstyle errorclass">

          </div>
          <div class="errorclass">
            <%= msg %>
          </div>
          <div class="successclass">
            <%=smsg%>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
