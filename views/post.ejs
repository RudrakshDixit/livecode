<style>

  .welc{
    color: white;
    font-size: 1rem;
  }
  .formc{
    margin: 1rem;

    padding: 8px;
    text-align: center;
  }
  .textarea{
    width: 50%;
    height: 50%;
    background-color: rgba(186,198,205,.1);
    padding: 8px;
    color: black;
    border: .5px solid black;
    border-radius: 10px;
    font-family: 'Montserrat'
  }
  .titlee{
    width: 50%;
    background-color: rgba(20,169,235,.1);
    padding: 8px;
    color: black;
    border: .5px solid black;
    border-radius: 10px;
    font-family: 'Montserrat'
  }
  .rdstyle{
    font-size: .7rem;
    color: #a3a3a3;
    text-align: center;

    margin-bottom: .4rem;
    margin-top: .1;
  }
</style>
<script type="text/javascript">
  function myFunction(){
    var title=$(".titlee").val();
    var texta=$(".textarea").val();

    if(title.trim().length==0){
      $(".titlee").css("border-color","red");
      $(".titlee").css("border-width","2px");
      $(".alertnametext").text("Title cannot be empty");
      return false;
    }else if(texta.trim().length==0){
      $(".textarea").css("border-color","red");
      $(".textarea").css("border-width","2px");
      $(".alertcodetext").text("Please enter the code");
      return false;
    }else if(title=="post"){
      $(".titlee").css("border-color","red");
      $(".titlee").css("border-width","2px");
      $(".alertnametext").text("Please use some other name");
      return false;
    }


    return true;
  }
</script>
