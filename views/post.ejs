  <body>


<div class="wrapper">

<div class="grid1">
  <!-- Top row -->
  <nav class="navbar navbar-light">
  <a class=" mr-auto"><h1 class="title" onclick="window.location='/';">LiveCode</h1></a>


            <% if (islog=="true") { %>
              <h2 class="welc"> Welcome <%= name %></h2>
            <% } else { %>

              <button class="btn btn-danger my-2 my-sm-0 button2  "  onClick="window.location='/register';">SignUp</button>
              <button class="btn btn-outline-light my-2 my-sm-0 button2"  onClick="window.location='/login';">Login</button>


          <%  } %>


    <!-- <button class="btn  my-2 my-sm-0 mr-2 mycol" type="submit" onClick="window.location='premium';"><img src="/images/premium.png" alt="invite"><span class="t">Premium</span></button> -->


</nav>

</div>

<div class="grid2">
<div class="container">

<form class="formc" action="/user/<%= uname %>/post" onSubmit="return myFunction()" method="post">
  <div class="form-group">
    <label for="text">Title:</label>
  <input class="titlee" type="text" name="title" value="" placeholder="Your title goes here">
    <div class="alertnametext rdstyle">
      <%= error %>

    </div>
  </div>
  <div class="form-group">
    <label for="text">Code:</label>
  <textarea class="textarea" rows='10' name="code" value="" placeholder="Your code goes here"></textarea>
    <div class="alertcodetext rdstyle">

    </div>
  </div>

<input type="submit" class="btn btn-danger"  value="Post">

</form>

</div>

