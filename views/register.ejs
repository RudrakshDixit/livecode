<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Register</title>

<link rel="stylesheet" href="styles2.css">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script type="text/javascript">
  function myFunction(){
    	var password=$(".password").val();
      var email=$(".email").val();
      var name=$(".name").val();
      if(name.length==0){

        $(".name").css("border-color","red");
        $(".name").css("border-width","2px");
        $(".alertnametext").text("Please enter your Name to continue");
        return false;
      }else{
        $(".name").css("border-color","#ccc");
        $(".name").css("border-width","1px");
        $(".alertnametext").text("");
      }
      if(email.length==0){

        $(".email").css("border-color","red");
        $(".email").css("border-width","2px");
        $(".alertemailtext").text("Please enter your Email to continue");
        return false;
      }else if(!email.includes('@' && '.')){
        $(".email").css("border-color","red");
        $(".email").css("border-width","2px");
        $(".alertemailtext").text("type correct email address");
        return false;
      }else{
        $(".email").css("border-color","#ccc");
        $(".email").css("border-width","1px");
        $(".alertemailtext").text("");
      }
      if(password.length==0){

        $(".password").css("border-color","red");
        $(".password").css("border-width","2px");
        $(".alertpasswordtext").text("Please enter your Password to continue");
        return false;
      } else
        if(password.length<6){
          $(".password").css("border-color","red");
          $(".password").css("border-width","2px");
           $(".alertpasswordtext").text("Length of the password should be greater than 5");
           return false;
        }else{
          $(".password").css("border-color","#ccc");
          $(".password").css("border-width","1px");
          $(".alertpasswordtext").text("");
        }
  return true;
}
  </script>

  </head>
  <body>


    <div class="container mt-5">
      <div class="centered">


        <div class="row">
          <div class="col-sm-8">
            <div class="card">
              <div class="card-body">
                <h1 class="reg">Register</h1>
                <form  action="/register" onSubmit="return myFunction()" method="post">
                  <div class="form-group">
                    <label for="text">Name:</label>
                    <input type="text" class="form-control name" name="name">
                    <div class="alertnametext rdstyle">

                    </div>
                  </div>
                  <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" class="form-control email" name="username">
                    <div class="alertemailtext rdstyle">

                    </div>
                  </div>
                  <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control password" name="password">
                    <div class="alertpasswordtext rdstyle">

                    </div>
                  </div>
                  <input type="submit" class="btn btn-danger" onclick="myFunction()" value="Sign up">
                  <button type="submit" class="btn btn-danger" onClick="window.location='login';">Already registered ? Login here</button>
                  <div class="errorclass"><%= error %></div>

                </form>
By signing up, you will agree to our <span class="pp" onClick="window.location='privacy-policy';"> privacy policy and t&c </span>
              </div>
            </div>
          </div>
          <!-- <div class="col-sm-4">
            <div class="card">
              <div class="card-body">
                <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                  <i class="fab fa-google"></i>
                  Sign Up with Google
                </a>
              </div>

            </div>
          </div> -->

        </div>
      </div>
    </div>
